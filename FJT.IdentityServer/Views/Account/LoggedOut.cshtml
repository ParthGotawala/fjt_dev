@model LoggedOutViewModel

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}

<div class="cm-login-container m-auto border-radius-3 whiteframe-10dp  text-center">
    <div class="cm-login-logo">Q</div>
    <div class="mb-3">Logout</div>
    <div><small>You are now logged out</small></div>
    <div class="my-4 font-size-14">
        @if (Model.PostLogoutRedirectUri != null)
        {
            <div>
                <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri"></a>
                @*Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to the
                    <span>@Model.ClientName</span> application.*@
            </div>
        }
        Click <a href="@ViewBag.returnURL">here</a> to return to the <span>@Model.ClientName</span> application.

        @if (Model.SignOutIframeUrl != null)
        {
            <iframe width="0" height="0" class="signout d-none" src="@Model.SignOutIframeUrl"></iframe>
        }
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        window.addEventListener("load", function () {
            window.location = '@ViewBag.returnURL';
        });
    </script>
}
