@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Welcome";
}

<div class=" d-flex justify-content-center">
    <div class="d-flex align-items-center" style="height:525px;">
        <h1>Welcome...</h1>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        const urlParameter = window.sessionStorage.getItem("urlParameter");
        if (urlParameter) {
            var isUserOverridden = '@Context.Session.GetInt32("isUserOverridden")';
            if (isUserOverridden) {
                window.sessionStorage.removeItem("urlParameter");
            }
            else {
                var url = '@Url.Action("Index", "Designer", new {@id= "urlParameter" })';
                url = url.replace("urlParameter", urlParameter);
                window.location.href = url;
            }
        }
    });
</script>