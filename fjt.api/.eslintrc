{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": 1,
    "curly": "error",
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "indent": 0,
    "eol-last": 0,
    "object-shorthand": 0,
    "linebreak-style": [
      "error",
      "windows"
    ],
    "max-len": 0,
    "no-var": 0,
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "trace"
        ]
      }
    ],
    "no-else-return": 0,
    "no-unneeded-ternary": 0,
    "no-extra-parens": 0,
    "radix": 0,
    "no-param-reassign": 0,
    "dot-notation": 0,
    "no-nested-ternary":0,
    "no-plusplus": 0
  },
  "globals": {
    "jsonwebtoken",
    "bcryptjs"
  }
}